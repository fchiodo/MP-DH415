# =============================================================================
# Trading Bot Configuration
# Copy this file to .env and fill in your credentials
# =============================================================================

# Slack Notifications
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=mt-bot

# PostgreSQL Database (optional, for production)
DB_NAME=TradingJournal
DB_USER=your_db_user
DB_PASS=your_db_password
DB_HOST=your_db_host
DB_PORT=5432

# FXCM API Credentials
FXCM_LOGIN_ID=your_fxcm_login_id
FXCM_PASSWORD=your_fxcm_password
FXCM_URL=http://www.fxcorporate.com/Hosts.jsp
FXCM_CONNECTION=Demo
FXCM_SESSION=Trade

# Risk Management
RISK_PER_TRADE=1.0
MIN_REWARD_RISK=2.0
REFERENCE_BALANCE=10000

# Active Currency Pairs (comma separated)
ACTIVE_PAIRS=EUR/USD,AUD/USD,GBP/USD,USD/JPY,GBP/JPY,USD/CAD,EUR/JPY,USD/CHF,NZD/USD
