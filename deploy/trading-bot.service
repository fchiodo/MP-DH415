[Unit]
Description=MP-DH415 Trading Bot (bot_runner.py)
After=network.target flask-api.service
Wants=flask-api.service

[Service]
Type=simple
User=__USER__
WorkingDirectory=__REPO_DIR__/backend
Environment="PATH=__VENV_DIR__/bin"
EnvironmentFile=__REPO_DIR__/.env
ExecStart=__VENV_DIR__/bin/python bot_runner.py --interval 300
Restart=on-failure
RestartSec=30
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
